{
    "manifest_version": 3,
    "name": "TUCaN Plus",
    "version": "0.50.0",
    "description": "Quality of life improvements for TUCaN",
    "update_url": "https://github.com/tucan-plus/tucan-plus/releases/latest/download/updates.xml",
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "permissions": [
        "declarativeNetRequestWithHostAccess",
        "declarativeNetRequestFeedback",
        "webRequest",
        "scripting",
        "storage",
        "cookies",
        "contextMenus",
        "notifications"
    ],
    "omnibox": {
        "keyword": "tucanplus"
    },
    "host_permissions": [
        "https://www.tucan.tu-darmstadt.de/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.tucan.tu-darmstadt.de/scripts/mgrqispi.dll?APPNAME=CampusNet&PRGNAME=CHANGELANGUAGE&ARGUMENTS=-N*,-N001",
                "https://www.tucan.tu-darmstadt.de/scripts/mgrqispi.dll?APPNAME=CampusNet&PRGNAME=CHANGELANGUAGE&ARGUMENTS=-N*,-N002",
                "https://www.tucan.tu-darmstadt.de/scripts/mgrqispi.dll?APPNAME=CampusNet&PRGNAME=STARTPAGE_DISPATCH&ARGUMENTS=-N*,-N*,-N000000000000000"
            ],
            "js": [
                "content-script-redirect.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://www.tucan.tu-darmstadt.de/*"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://moodle.informatik.tu-darmstadt.de/"
            ],
            "js": [
                "content-script-moodle-informatik.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://moodle.tu-darmstadt.de/"
            ],
            "js": [
                "content-script-moodle.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://sharelatex.tu-darmstadt.de/saml/login",
                "https://www-cgi.hrz.tu-darmstadt.de/shibboleth/sharelatex/index.html?entityID=https%3A%2F%2Fsharelatex-01.ca.hrz.tu-darmstadt.de%2FSaml2%2Fproxy_saml2_backend.xml&return=https%3A%2F%2Fsharelatex-01.ca.hrz.tu-darmstadt.de%2FSaml2%2Fdisco"
            ],
            "js": [
                "content-script-sharelatex.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://next.hessenbox.de/shibboleth-ds/index.html?*"
            ],
            "js": [
                "content-script-hessenbox.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://git.rwth-aachen.de/users/sign_in",
                "https://git.rwth-aachen.de/shibboleth-ds/?*"
            ],
            "js": [
                "content-script-gitlab.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://www.tucan.tu-darmstadt.de/scripts/mgrqispi.dll?*"
            ],
            "js": [
                "content-script-tucan-autologin.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://login.tu-darmstadt.de/idp/profile/SAML2/Redirect/SSO?*"
            ],
            "js": [
                "content-script-login.js"
            ],
            "run_at": "document_end"
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "tucant@selfmade4u.de",
            "update_url": "https://github.com/tucan-plus/tucan-plus/releases/latest/download/updates.json"
        }
    },
    "icons": {
        "512": "logo.png"
    },
    "background": {
        "service_worker": "background.js",
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "action": {
        "default_icon": {
            "512": "logo.png"
        },
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "web_accessible_resources": [
        {
            "resources": [
                "public/index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        },
        {
            "resources": [
                "public/*.wasm"
            ],
            "extension_ids": [
                "*"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src http://localhost:8080 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "commands": {
        "open-in-tucan-page": {
            "suggested_key": {
                "default": "Ctrl+Shift+1"
            },
            "description": "Open page in TUCaN"
        }
    }
}